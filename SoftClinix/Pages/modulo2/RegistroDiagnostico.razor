@page "/registro-diagnostico"
@using Microsoft.AspNetCore.Components.Forms

<nav class="navbar  navbar-light bg-black">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/registro-paciente">Registro Enfermo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/registro-diagnostico">Registro Diagnostico</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/garantia">Garantia</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/medicos-tratantes">Medicos Tratantes</a>
            </li>
        </ul>
    </div>
</nav>

<EditForm Model="@diagnosticoModel">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">
      <div class="row">
        <div class="col-4">
            <label>Fecha:</label>
            <InputDate class="form-control" @bind-Value="diagnosticoModel.Fecha" TValue="DateTime" />
        </div>

        <div class="col-4">
            <label>Servicio:</label>
            <InputSelect class="form-control" @bind-Value="diagnosticoModel.Servicio" TValue="string">
                <option value="ALERGOLOGIA">ALERGOLOGIA</option>
               
            </InputSelect>
        </div>

        <div class="col-4">
            <label>Médico:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.Medico" />
        </div>
     </div>
 </div>

    <div class="container">
        <div class="row">
        <h3 class="text-muted mb-4">Diagnósticos</h3>
        <div class="col-4">
            <label>Principal:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.DiagnosticoPrincipal" />
        </div>
        <div class="col-4">
            <label>Asociado 1:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.DiagnosticoAsociado1" />
        </div>
        <div class="col-4">
            <label>Asociado 2:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.DiagnosticoAsociado2" />
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-4">
            <label>Médico Remitente:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.MedicoRemitente" />
        </div>

        <div class="col-4">
            <label>Enfermera:</label>
            <InputText class="form-control" @bind-Value="diagnosticoModel.Enfermera" />
        </div>
        <div>
        <div class="col-4">
            <label>Observaciones:</label>
            <InputTextArea class="form-control" @bind-Value="diagnosticoModel.Observaciones" />
        </div>
            </div>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</EditForm>

@code {
    private DiagnosticoModel diagnosticoModel = new DiagnosticoModel();

    public class DiagnosticoModel
    {
        public DateTime Fecha { get; set; } = DateTime.Now;
        public string Servicio { get; set; }
        public string Medico { get; set; }
        public string DiagnosticoPrincipal { get; set; }
        public string DiagnosticoAsociado1 { get; set; }
        public string DiagnosticoAsociado2 { get; set; }
        public string MedicoRemitente { get; set; }
        public string Enfermera { get; set; }
        public string Observaciones { get; set; }
    }
}
