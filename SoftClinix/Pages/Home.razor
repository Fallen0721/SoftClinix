@page "/"
@using SoftClinix.Layout
@using SoftClinix.Services
@inject PacienteService PacienteService

@inherits LayoutComponentBase
<nav class="navbar navbar-light bg-black">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/">Registro</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/estadopaciente">Paciente Datos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/gfamiliar">Grupo Familiar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/d_complement">Datos Complementarios</a>
            </li>
        </ul>
    </div>
</nav>
<form asp-action="Index" method="post" enctype="multipart/form-data">

    <div class="container">
        <div class="row">
            <h3>Datos Personales</h3>
            <div class="col-4">
                <label>Nombres:</label>
                <input type="text" @bind="PacienteService.Paciente.Nombres" class="form-control" />
            </div>
            <div class="col-4">
                <label>Apellidos:</label>
                <input type="text" @bind="PacienteService.Paciente.Apellidos" class="form-control" />
            </div>
            <div class="col-4">
                <label>Sexo:</label>
                <select @bind="PacienteService.Paciente.Sexo" class="form-control">
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
            </div>
            <div class="col-4">
                <label>Fecha de Nacimiento:</label>
                <input type="date" @bind="PacienteService.Paciente.FNacimiento" class="form-control" />
            </div>
            <div class="col-4"> 
                <label>Estado Civil:</label> 
                <select @bind="PacienteService.Paciente.EstadoCivil" class="form-control"> 
                <option value="Soltero(a)">Soltero(a)</option> 
                <option value="Casado(a)">Casado(a)</option> 
                <option value="Divorciado">Divorciado(a)</option> 
                <option value="Union Libre">Union Libre</option> 
                <option value="Viudo(a)">Viud(a)</option> 
                </select> 
            </div>
            <div class="col-4">
                <label>Ocupación:</label>
                <input type="text" @bind="PacienteService.Paciente.Ocupacion" class="form-control" />
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
         <h3>Documentación y Contacto</h3>
            <div class="col-4">
                <label>No. Historia:</label>
                <input type="text" @bind="PacienteService.Paciente.NoHistoria" class="form-control" />
            </div>
            <div class="col-4">
                <label>Doc. Identidad:</label>
                <input type="text" @bind="PacienteService.Paciente.DocIdentidad" class="form-control" />
            </div>
            <div class="col-4">
                <label>Dirección:</label>
                <input type="text" @bind="PacienteService.Paciente.Direccion" class="form-control" />
            </div>
            <div class="col-4">
                <label>Teléfonos:</label>
                <input type="text" @bind="PacienteService.Paciente.Telefonos" class="form-control" />
            </div>
            <div class="col-4">
                <label>E-Mail:</label>
                <input type="email" @bind="PacienteService.Paciente.Email" class="form-control" />
            </div>

        </div>
    </div>


    <div class="container">
        <div class="row">
            <h3>Información de Salud</h3>
            <div class="col-4">
                <label>Estado de Historia:</label>
                <input type="text" @bind="PacienteService.Paciente.EstadoHistoria" class="form-control" />
            </div>
            <div class="col-4">
                <label>Plan de Atención:</label>
                <input type="text" @bind="PacienteService.Paciente.PlanAtencion" class="form-control" />
            </div>
            <div class="col-4">
                <label>Médico:</label>
                <input type="text" @bind="PacienteService.Paciente.Medico" class="form-control" />
            </div>
        </div>
    </div>
</form>

<div class="button-container">
    <a href="/estadopaciente" class="btn btn-primary">Siguiente Página</a>
</div>

@code {
    private string nombres;
    private string apellidos;
    private string sexo;
    private DateTime fechaNacimiento;
    private string estadoCivil;
    private string ocupacion;
    private string noHistoria;
    private string docIdentidad;
    private string direccion;
    private string telefonos;
    private string email;
    private string estadoHistoria;
    private string planAtencion;
    private string medico;

    private void GuardarDatos()
    {
        // Lógica para guardar los datos
    }
}

<style>
    .form-container {
        display: flex;
        flex-direction: column;
        gap: 20px; /* Espacio entre elementos */
    }

   
    .button-container {
        display: flex;
        justify-content: flex-end; /* Alinea el botón a la derecha */
        margin-top: 20px;
        padding-right: 20px; /* Añade un padding derecho para que no esté pegado al borde */
    }

    .btn {
        margin-top: 10px;
        padding: 10px 20px; /* Añade padding para un mejor tamaño del botón */
        font-size: 16px; /* Tamaño de texto más grande */
    }

</style>