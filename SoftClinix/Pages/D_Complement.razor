        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .image-upload-field {
        flex: 1;
        min-width: 45%; /* Asegura que los campos no se hagan demasiado pequeños */
        margin-bottom: 20px;
    }

    .image-placeholder, .image-preview {
        width: 100%;
        height: 150px;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
